<% provide(:title, '店舗詳細ページ') %>

<h1 id="my-page"><%= @store.store_name %></h1>

<%= render 'shared/flash_messages' %>

<h3 class="studios-index">スタジオ一覧</h3>
<table class="table table-striped stores-table">
  <thead>
    <tr>
      <th>スタジオ名</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @studios.each do |s| %>
    <tr>
      <td><%= s.studio_name %></td>
      <td><%= link_to "予約状況", studio_path(s), class: "btn btn-success" %></td>
      <% if current_user.id == s.store.user_id %>
        <td><%= link_to "スタジオ削除",  studio_path(s), method: "delete",
                data: {confirm: "スタジオを削除しますか?"}, class: "btn btn-info" %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<% if current_user.id == @store.user_id %>
  <%= link_to "新規スタジオ登録", new_studio_path(store_id: @store), class: "btn btn-primary new-store-button" %>
<% end %>

<div id="testmaps"></div>

<script>
  var map;
  function initMap() {
      map = new google.maps.Map(document.getElementById('testmaps'), { // #sampleに地図を埋め込む
          center: { // 地図の中心を指定
              lat: 34.7019399, // 緯度
              lng: 135.51002519999997 // 経度
          },
          zoom: 19 // 地図のズームを指定
      });
  }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDXauEV4TuXM075vYtemnRiN7Bd1j9cw6k&callback=initMap"
    async defer></script>

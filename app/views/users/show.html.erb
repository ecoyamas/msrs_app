<% provide(:title, 'my page') %>

  <% flash.each do |key, value| %>
    <div class="alert <%= bootstrap_class_for(key) %>"><%= value %></div>
  <% end %>

  <h1 id="my-page">my page</h1>

  <div id="user-name">
    <h2 id="account">user name</h2>
    <div><%= @user.name%></div>
  </div>

  <div id="information">
    <h3>information</h3>
    <%= render 'layouts/information' %>
  </div>

  <div id="reservation-status">
    <h2 id="reservation-title">reservation status</h2>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Store</th>
          <th>Studio</th>
          <th>Date</th>
          <th>Time</th>
        </tr>
      </thead>

      <tbody>
        <% @reservation.each do |r| %>
        <% if r.date >= Date.today %>
          <tr>
            <td><%= r.place %></td>
            <td><%= r.studio %></td>
            <td><%= r.date %></td>
            <td><%= r.frame_time %></td>
            <td><%= link_to "変更", "/reservations/#{r.id}/edit",class:"btn btn-success" %> </td>
            <td><%= link_to "削除", "/reservations/#{r.id}", method: "delete" ,
                    data: { confirm: "予約を取り消しますか?"},class:"btn btn-info" %> </td>
          </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <p>
    <%= link_to("new reserve","/reserve/#{@user.id}" ,id:"newreserve-button" ) %>
  </p>

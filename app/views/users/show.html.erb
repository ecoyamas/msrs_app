<% provide(:title, 'my page') %>

<% flash.each do |key, value| %>
        <div class="alert <%= bootstrap_class_for(key) %>"><%= value %></div>
      <% end %>

<h1 id="my-page">my page</h1>

<div id="user-name">
<h2 id="account">user name</h2>
<div><%= @user.name%></div>
</div>

<div id="information">
  <h3>information</h3>
  <%= render 'layouts/information' %>
</div>

<div id="reservation-status">
  <h2 id="reservation-title">reservation status</h2>
  <p>予約状況を表示予定</p>
  <% @reservation.each do |r| %>
  <%= r.place %>
  <% end %>
</div>

<p>
  <%= link_to("new reserve","/reserve/#{@user.id}" ,id:"reserve-button" ) %>
</p>

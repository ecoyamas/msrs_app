<% provide(:title, 'my page') %>

  <h1 id="my-page">マイページ</h1>
  <%# TODO: idをclassに修正する %>

  <%= render 'shared/flash_messages' %>

  <div id="user-name">
    <h2 id="account">お名前</h2>
    <div><%= @user.name %></div>
  </div>

  <div id="information">
    <h3>お知らせ</h3>
    <%= render 'layouts/information' %>
  </div>

  <div id="reservation-status">
    <h2 id="reservation-title">予約状況</h2>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>店舗</th>
          <th>スタジオ</th>
          <th>ご利用日時</th>
          <th>ご利用時間</th>
        </tr>
      </thead>

      <tbody>
        <% @reservation.each do |r| %>
          <tr>
            <td><%= r.store.store_name %></td>
            <td><%= r.studio.studio_name %></td>
            <td><%= r.start_datetime %></td>
            <td><%= r.use_time %></td>
            <td><%= link_to "変更", edit_reservation_path(r), class: "btn btn-success" %></td>
            <td><%= link_to "削除", "/reservations/#{r.id}", method: "delete",
                    data: {confirm: "予約を取り消しますか?"}, class: "btn btn-info" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <p>
    <%= link_to("店舗一覧", stores_path, id: "newreserve-button" ) %>
  </p>

  <div class="store_search" >
    <h2 id="reservation-title">店舗検索</h2>
    <%= form_tag(user_path, :method => 'get') do %>
    <%= text_field_tag :search %>
    <%= submit_tag '検索', :name => nil %>
    <% end %>
    <% if @search_store.present? %>
  　　 <% @search_store.each do |s| %>
      <%= s.store_name %>
      <% end %>
    <% end %>
  </div>

  <div id="maps" class="store-map"></div>

  <!-- Google maps apiの処理 -->
  <%= javascript_tag do %>
    var lat_map = <%= raw @user.lat.to_json %>;
    var lng_map = <%= raw @user.lng.to_json %>;

      var map;
      function initMap() {
          map = new google.maps.Map(document.getElementById('maps'), {
              center: { // 地図の中心を指定
                  lat: lat_map, // 緯度
                  lng: lng_map // 経度
              },
              zoom: 19 // 地図のズームを指定
          });
          var mapPosition = {lat: lat_map, lng: lng_map};
          var marker = new google.maps.Marker({
          map: map,
          position: mapPosition
        });
      }
  <% end %>
